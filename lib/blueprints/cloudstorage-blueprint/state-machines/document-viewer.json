{
  "Comment": "Cloud Storage Document Viewer",
  "Version": "1.0",
  "version": "1.0",
  "StartAt": "GetContents",
  "States": {
    "GetContents": {
      "Type": "Task",
      "Resource": "module:getCloudStorageContents",
      "Parameters": {
        "provider.$": "$.provider",
        "remoteFolderPath.$": "$.remoteFolderPath"
      },
      "ResultPath": "$.contents",
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "Next": "FailedToGetDocuments"
        }
      ],
      "Next": "ShapeDocuments"
    },
    "FailedToGetDocuments": {
      "Type": "Pass",
      "Result": {
        "isError": true,
        "errorMessage": "Could not get contents",
        "folders": [],
        "files": []
      },
      "Next": "AwaitingHumanInput"
    },
    "ShapeDocuments": {
      "Type": "Task",
      "Parameters": {
        "templateTitle.$": "$.templateTitle",
        "provider.$": "$.provider",
        "remoteFolderPath.$": "$.remoteFolderPath",
        "contents.$": "$.contents"
      },
      "Resource": "function:cloudstorage_shapeDocuments",
      "ResultSelector": {
        "folders.$": "$.folders",
        "files.$": "$.files"
      },
      "Next": "AwaitingHumanInput"
    },
    "AwaitingHumanInput": {
      "Type": "Task",
      "Resource": "module:awaitingHumanInput",
      "ResourceConfig": {
        "uiName": "cloudstorage_documentViewer",
        "dataPath": "$"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "$authenticated",
      "allows": [
        "*"
      ]
    }
  ]
}
